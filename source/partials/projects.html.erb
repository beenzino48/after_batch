<!-- services section-->
    <section id="services">
        <div class="container">
            <h1 class="text-center">Services</h1>
            <div class="row">
                <div class="col-lg-4 mt-4">
                    <div class="card servicesText">
                        <div class="card-body">
                            <i class="fas servicesIcon fa-clock"></i>
                            <h4 class="card-title mt-3">Website Development</h4>
                            <p class="card-text mt-3"> Able to develop websites front-end and back-end using Django, React and Ruby on Rails.
                            Experienced in creating clean and responsive sites to provide users with a fun and interactive experience.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mt-4">
                    <div class="card servicesText">
                        <div class="card-body">
                            <i class='fas servicesIcon fa-layer-group'></i>
                            <h4 class="card-title mt-3">Website Design</h4>
                            <p class="card-text mt-3">Specialise in modern and attractive designs for websites and web applications. Experienced with the recent web development tools such as React,
                            while consistently learning new ways to make cleaner coded and more visually appealing web designs.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mt-4">
                    <div class="card servicesText">
                        <div class="card-body">
                            <i class='far servicesIcon fa-check-circle'></i>
                            <h4 class="card-title mt-3">Website Deployment</h4>
                            <p class="card-text mt-3">Experienced in all stages of deployment in regards to web development. Great at working with a team to develop from staging to production.
                            Love to communicate over slack or check Pull requests from others in my team. Strong understanding of testing.
                        </div>
                    </div>
                </div>
            </div>

<section id="tech-stack">
<div class="tech-container">
        <h1 class="text-center">My Tech Stack</h1>
        <div class="tech-stack">
        </div>
        </div>
</section>

<section id="projects">
<div class="container">
        <h1 class="text-center">Web Development Projects</h1>
        <div class="cards">
          <% data.projects.each do |project| %>


              <div class="card servicesText w-100 h-230px">
                <div class="card-body-projects">
                <h2 class="card-title mt-3"><%= project.name %></h2>
                  <% link_to project.url, class: 'external-link', target: '_blank' do %>
                    <i class="fas fa-external-link-alt"></i>
                  <% end %>
                </div>
                <p class="card-text mt-3"><%= project.description %></p>
              <a class="btn btn-ghost" href=<%= project.url %>>Vist website</a>
              </div>



            <div class="card-product">
              <%= image_tag project.image, alt: "project image" %>
            </div>
          <% end %>
        </div>
        </div>
</section>
